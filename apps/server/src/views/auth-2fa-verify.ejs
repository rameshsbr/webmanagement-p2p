<!DOCTYPE html>
<html lang="en" data-theme="auto">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Verify 2FA</title>
  <link rel="stylesheet" href="/static/auth/styles.css"/>
</head>
<body class="login-body">
  <div class="bg"></div>

<%
// default to admin if not provided
const _mode = (typeof mode !== 'undefined' ? mode : 'admin');
const isMerchant = _mode === 'merchant';
const postAction = isMerchant ? '/auth/merchant/2fa/verify' : '/auth/2fa/verify';
const cookieName = isMerchant ? 'm_pre2fa' : 'pre2fa';
%>

  <main class="login-card">
    <header class="brand">
      <div class="logo">üîê</div>
      <h1>2-Step Verification</h1>
      <p class="muted">Enter the 6-digit code from your authenticator app</p>
    </header>

    <% if (error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>

    <form id="verifyForm" method="POST" action="<%= postAction %>" class="form">
      <input type="hidden" name="token" id="pre2faToken" value="<%= token || '' %>"/>

      <div class="field">
        <label>Authentication code</label>
        <input type="text" name="code" inputmode="numeric" pattern="[0-9]{6}" maxlength="6" required placeholder="123456"/>
      </div>

      <button type="submit" class="btn primary w-100">Verify</button>
    </form>

    <script>
      // Fill token from the right cookie if the server didn't inject it
      (function () {
        var el = document.getElementById('pre2faToken');
        if (!el || el.value) return;

        var cookieName = <%= JSON.stringify(cookieName) %>;
        function escapeRe(s){ return s.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&'); }
        var re = new RegExp('(?:^|;\\s*)' + escapeRe(cookieName) + '=([^;]+)');
        var m = (document.cookie || '').match(re);
        if (m) { try { el.value = decodeURIComponent(m[1]); } catch {} }
      })();

      // Loud client-side logging so you see the post in DevTools Console
      document.getElementById('verifyForm').addEventListener('submit', function (e) {
        const fd = new FormData(e.target);
        console.log('[2FA] submitting', Object.fromEntries(fd.entries()));
      });
    </script>
  </main>
</body>
</html>